        <DataGrid x:Name="datagrid1" HorizontalAlignment="Left" Height="58" Margin="10,26,0,0" VerticalAlignment="Top" Width="270"/>
        <TextBox x:Name="tbnums"  HorizontalAlignment="Left" Height="24" Margin="10,115,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="270"/>
        <TextBox x:Name="tbprod"  HorizontalAlignment="Left" Height="24" Margin="10,175,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="270" IsReadOnly="True"/>
